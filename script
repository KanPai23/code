<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Information System</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
        }
        .form-group input {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }
        .form-group button {
            padding: 10px 15px;
            background-color: #007BFF;
            color: #fff;
            border: none;
            cursor: pointer;
        }
        .form-group button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to the Car Information System</h1>
        <form id="carForm">
            <div class="form-group">
                <label for="make">Car Make:</label>
                <input type="text" id="make" name="make" required>
            </div>
            <div class="form-group">
                <label for="model">Car Model:</label>
                <input type="text" id="model" name="model" required>
            </div>
            <div class="form-group">
                <label for="year">Year:</label>
                <input type="number" id="year" name="year" required>
            </div>
            <div class="form-group">
                <button type="submit">Add Car</button>
            </div>
        </form>
        <h2>Search for a Car</h2>
        <div class="form-group">
            <label for="search">Search by Make:</label>
            <input type="text" id="search" name="search">
        </div>
        <div class="form-group">
            <button onclick="searchCar()">Search</button>
        </div>
        <div id="searchResults"></div>
    </div>

    <script>
        const cars = [];

        document.getElementById('carForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const make = document.getElementById('make').value;
            const model = document.getElementById('model').value;
            const year = document.getElementById('year').value;
            cars.push({ make, model, year });
            alert('Car added successfully!');
            this.reset();
        });

        function searchCar() {
            const searchValue = document.getElementById('search').value.toLowerCase();
            const results = cars.filter(car => car.make.toLowerCase().includes(searchValue));
            const resultsContainer = document.getElementById('searchResults');
            resultsContainer.innerHTML = '';
            if (results.length > 0) {
                results.forEach(car => {
                    const carElement = document.createElement('div');
                    carElement.textContent = `${car.make} ${car.model} (${car.year})`;
                    resultsContainer.appendChild(carElement);
                });
            } else {
                resultsContainer.textContent = 'No cars found';
            }
        }
    </script>
</body>
</html>